<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_background"
    tools:context=".Q8">

    <TextView
        android:id="@+id/questionNo8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:text="@string/q8"
        android:textSize="16sp"
        android:textColor="@color/text"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home8" />

    <TextView
        android:id="@+id/question8"
        android:layout_width="374dp"
        android:layout_height="105dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="27dp"
        android:text="@string/Q8"
        android:textColor="@color/text"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionNo8" />

    <Button
        android:id="@+id/strAgree_button8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/strAgree"
        android:textSize="18sp"
        android:background="@color/buttonColor"
        app:layout_constraintTop_toBottomOf="@+id/question8"
        tools:layout_editor_absoluteX="161dp" />

    <Button
        android:id="@+id/agree_button8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/agree"
        android:textSize="18sp"
        android:background="@color/buttonColor"
        app:layout_constraintTop_toBottomOf="@+id/strAgree_button8"
        tools:layout_editor_absoluteX="161dp" />

    <Button
        android:id="@+id/neutral_button8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/neutral"
        android:textSize="18sp"
        android:background="@color/buttonColor"
        app:layout_constraintTop_toBottomOf="@+id/agree_button8"
        tools:layout_editor_absoluteX="161dp" />

    <Button
        android:id="@+id/dislike_button8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/disagree"
        android:textSize="18sp"
        android:background="@color/buttonColor"
        app:layout_constraintTop_toBottomOf="@+id/neutral_button8"
        tools:layout_editor_absoluteX="161dp" />

    <Button
        android:id="@+id/strDislike_button8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/strDisagree"
        android:textSize="18sp"
        android:background="@color/buttonColor"
        app:layout_constraintTop_toBottomOf="@+id/dislike_button8"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/home8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/home"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/prev_button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="@string/prev"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/strDislike_button8" />

    <Button
        android:id="@+id/next_button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:text="@string/next"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/strDislike_button8" />


</androidx.constraintlayout.widget.ConstraintLayout>